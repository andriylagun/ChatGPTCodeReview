<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contract_Subcontract_must_be_active</fullName>
    <active>true</active>
    <description>Contract / Subcontract must be active to run the rule</description>
    <errorConditionFormula>AND(
    ISCHANGED(isActive__c),
    isActive__c = true,
    FIN_AssociatedContract__r.FIN_ActiveStatus__c = false 
   
)</errorConditionFormula>
    <errorMessage>Contract / Subcontract must be active to run the rule</errorMessage>
</ValidationRule>
