<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Only_One_Field</fullName>
    <active>true</active>
    <errorConditionFormula>AND( NOT(
        ISBLANK(FIN_AdjustmentAmount__c)
        ),
     NOT(
        ISBLANK(FIN_OrderStartDate__c
        )
    )
)</errorConditionFormula>
    <errorMessage>Either Adjustment Amount or Order Start Date field must be populated.</errorMessage>
</ValidationRule>
