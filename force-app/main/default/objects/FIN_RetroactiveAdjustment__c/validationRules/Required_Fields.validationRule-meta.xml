<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Fields</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISBLANK(FIN_AdjustmentAmount__c),
ISBLANK(FIN_OrderStartDate__c
)
)</errorConditionFormula>
    <errorMessage>Either Adjustment Amount or Order Start Date field must be populated.</errorMessage>
</ValidationRule>
